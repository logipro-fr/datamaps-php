{
    "name": "logipro/datamaps-php",
    "type": "library",
    "description": "A PHP component to use Datamaps API within your PHP project.",
    "keywords": ["map", "datamaps"],
    "homepage": "https://github.com/logipro-fr/datamaps-php",
    "license": "MIT",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Alban Bernard",
            "email": "alban.leandre.bernard@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "symfony/http-client": "^7.0"
    },
    "require-dev": {
        "infection/extension-installer": "0.1.2",
        "infection/infection": "^0.27",
        "phpstan/phpdoc-parser": "^1.20",
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^10",
        "squizlabs/php_codesniffer": "3.*"
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "DatamapsPHP\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DatamapsPHP\\Tests\\": "tests/unit"
        }
    }
}
